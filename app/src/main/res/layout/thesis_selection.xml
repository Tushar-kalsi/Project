<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:elevation="5dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Publication Option :"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/text1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/viewpublication"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="20dp"
                android:text="View \nPublication"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/createPublication"
            app:layout_constraintTop_toBottomOf="@+id/viewpublication"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="20dp"
                android:text="Create \nPublication"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>